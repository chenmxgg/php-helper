{
    "name": "chenm/helper",
    "type": "library",
    "license": "MIT",
    "description": "php常用助手函数封装，包含日志类、文件类、上传类、邮件类、短信类等常用接口封装",
    "require": {
        "php": ">=7.2",
        "ext-json": "*",
        "psr/log": "^1.0.1 || ^2.0 || ^3.0",
        "composer-runtime-api": "^2.0",
        "monolog/monolog": "^2.2 <2.8",
        "symfony/mailer": "^5.4 || ^6",
        "symfony/mime": "^5.4 || ^6"
    },
    "require-dev": {
        "php": ">=7.2",
        "friendsofphp/php-cs-fixer": "~3.9.0",
        "phpstan/phpstan": "~1.8.0",
        "phpunit/phpunit": ">=9",
        "rector/rector": "~0.13",
        "yurunsoft/ide-helper": "~1.0",
        "yurunsoft/yurun-http": "^4.0.0"
    },
    "autoload": {
        "psr-4": {
            "Chenm\\Helper\\": "src/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Chenm\\Helper\\": "tests/"
        },
        "files": [
            "src/functions.php"
        ]
    },
    "config": {
        "sort-packages": true
    },
    "scripts": {},
    "repositories": {
        "packagist": {
            "type": "composer",
            "url": "https://packagist.org"
        }
    }
}
